<resources>
    <!-- Base application theme. -->
    <style name="Theme.QManga" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bgc">@color/light_bg</item>
        <item name="tc">@color/black_tx</item>
        <item name="bg_element">@color/light_bg_element</item>
        <item name="toolbar_bg">@color/light_nav</item>

        <item name="android:editTextColor">@color/black_tx</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/gray</item>

        <item name="sheetsDisplayHandle">false</item>
        <item name="sheetsDisplayCloseButton">false</item>

        <item name="sheetsTitleLineHeight">0dp</item>
        <item name="sheetsContentLineHeight">0dp</item>

        <item name="colorControlNormal">@color/gray</item>

        <item name="actionMenuTextColor">@color/gray</item>
        <item name="android:actionMenuTextColor">@color/gray</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

        <item name="searchViewStyle">@style/Theme.QManga.SearchViewTheme</item>
    </style>

    <style name="Theme.QManga.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bgc">@color/dark_bg</item>
        <item name="tc">@color/white_tx</item>
        <item name="bg_element">@color/dark_bg_element</item>
        <item name="toolbar_bg">@color/dark_nav</item>

        <item name="android:editTextColor">@color/white_tx</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/gray</item>

        <item name="sheetsDisplayHandle">false</item>
        <item name="sheetsDisplayCloseButton">false</item>

        <item name="sheetsTitleLineHeight">0dp</item>
        <item name="sheetsTitleColor">@color/white_tx</item>
        <item name="sheetsContentColor">@color/white_tx</item>
        <item name="sheetsBackgroundColor">@color/dark_bg</item>

        <item name="colorControlNormal">@color/gray</item>

        <item name="actionMenuTextColor">@color/gray</item>
        <item name="android:actionMenuTextColor">@color/gray</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

        <item name="searchViewStyle">@style/Theme.QManga.SearchViewTheme</item>
    </style>

    <style name="Theme.QManga.Reader" parent="Theme.QManga.Dark">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.QManga.SearchViewTheme" parent="android:Widget.Material.SearchView">
        <item name="closeIcon">@drawable/ic_close_gray</item>
    </style>

    <style name="FilterCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

</resources>